 = line.match(/\[(\d+):(\d+\.\d+)\](.*)/);  if (match) {    return { time: parseInt(match[1])*60 + parseFloat(match[2]), text: match[3] };  }  return null;}).filter(line => line !== null);// 创建歌词元素lyricLines.forEach(line => {  const p = document.createElement('p');  p.textContent = line.text;  lyricsContainer.appendChild(p);});audio.addEventListener('timeupdate', () => {  const currentTime = audio.currentTime;  lyricLines.forEach((line, index) => {    const p = lyricsContainer.children[index];    if (currentTime >= line.time && (!lyricLines[index+1] || currentTime < lyricLines[index+1].time)) {      p.style.color = '#ff4081';      p.scrollIntoView({ behavior: 'smooth', block: 'center' });    } else {      p.style.color = '#000';    }  });});</script>]]></content>
    
    
    
